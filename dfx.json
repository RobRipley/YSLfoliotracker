{
  "version": 2,
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "backend/main.mo",
      "dependencies": []
    },
    "frontend": {
      "type": "assets",
      "source": [
        "frontend"
      ],
      "dependencies": [
        "backend"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "type": "persistent",
      "providers": [
        "https://icp-api.io"
      ]
    }
  },
  "output_env_file": ".env"
}